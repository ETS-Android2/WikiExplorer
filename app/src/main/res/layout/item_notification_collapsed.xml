<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_notificaton_collalpsed_image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingRight="6dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/icon_container"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_notificaton_collalpsed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification text"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title" />

        <TextView
            android:id="@+id/item_notificaton_collalpsed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text=" Subtext - expand to see all the details"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Description" />
    </LinearLayout>

</RelativeLayout>
